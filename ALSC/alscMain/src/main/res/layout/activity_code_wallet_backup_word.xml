<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1a2135"
        android:orientation="vertical">

        <include
            android:id="@+id/common_header"
            layout="@layout/activity_code_wallet_header" />

        <TextView
            android:id="@+id/tvMnemonic"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textSize="@dimen/text_size_17"
            android:background="@drawable/bg_black_tranprent_radius" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="280dp"
            android:src="@mipmap/icon_white_qrcode" />

        <Button
            android:id="@+id/btn_next"
            style="@style/WalletCodeBtnStyle"
            android:text="@string/wt_type_next"
            android:layout_marginTop="220dp" />
    </LinearLayout>
</layout>
