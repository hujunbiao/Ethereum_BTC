<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_slide_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="相关数据"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="参与贡献"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/et_count"
                    style="@style/WalletCodeEditStyle"
                    android:layout_marginTop="10dp"
                    android:hint="请输入数量"
                    android:inputType="number"
                    android:textColorHint="@color/black" />


                <TextView
                    android:id="@+id/tv_alsc_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/et_pay_pwd"
                    style="@style/WalletCodeEditStyle"
                    android:layout_marginTop="10dp"
                    android:hint="@string/wh_sp_pay_pwd_hint"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black" />

                <Button
                    android:id="@+id/btn_devote_creat"
                    style="@style/WalletHoteBtnStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="@{clickListener}"
                    android:text="验证密码后参与贡献" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="资产兑换"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_real_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />


                <EditText
                    android:id="@+id/et_capital_count"
                    style="@style/WalletCodeEditStyle"
                    android:layout_marginTop="10dp"
                    android:hint="请输入要兑换的USTD数量"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/et_alsc"
                    style="@style/WalletCodeEditStyle"
                    android:layout_marginTop="10dp"
                    android:hint="ALSD数量"
                    android:inputType="number"
                    android:enabled="false"
                    android:visibility="gone"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/et_pay_pwd2"
                    style="@style/WalletCodeEditStyle"
                    android:layout_marginTop="10dp"
                    android:hint="@string/wh_sp_pay_pwd_hint"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black" />

                <Button
                    android:id="@+id/btn_exchange"
                    style="@style/WalletHoteBtnStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="@{clickListener}"
                    android:text="验证密码后兑换资产" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="超级节点"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/tv_real_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />


                <EditText
                    android:id="@+id/et_pay_pwd3"
                    style="@style/WalletCodeEditStyle"
                    android:layout_marginTop="10dp"
                    android:hint="@string/wh_sp_pay_pwd_hint"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black" />

                <Button
                    android:id="@+id/btn_super"
                    style="@style/WalletHoteBtnStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="@{clickListener}"
                    android:text="验证密码后参与超级节点" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>