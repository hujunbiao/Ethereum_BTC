<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_theme_bg1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wallet_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/wallet_create"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/wallet_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/wallet_import"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />


    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <TextView
        android:id="@+id/wallet_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/wallet_cancle"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>