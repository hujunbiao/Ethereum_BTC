<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_theme_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_slide_bg"
            android:orientation="vertical">

            <com.alsc.utils.view.TitleBar
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px180"
                app:showLeftDrawable="true"
                app:showTextLeft="true"
                app:tbTitleLeft="@string/menu_item_system" />

            <com.alsc.utils.view.ItemGroup
                android:id="@+id/security_change_login_password"
                style="@style/ItemGroupStyle"
                app:drawable_right="@mipmap/icon_arrow"
                app:group_title="@string/security_change_login_password"
                app:line_height="0" />

            <com.alsc.utils.view.ItemGroup
                android:id="@+id/security_change_pay_password"
                style="@style/ItemGroupStyle"
                app:drawable_right="@mipmap/icon_arrow"
                app:group_title="@string/security_change_pay_password"
                app:line_height="0" />

            <com.alsc.utils.view.ItemGroup
                android:id="@+id/security_google"
                style="@style/ItemGroupStyle"
                app:drawable_right="@mipmap/icon_arrow"
                app:group_title="@string/security_google"
                app:line_height="0" />

            <com.alsc.utils.view.ItemGroup
                android:id="@+id/security_phone"
                style="@style/ItemGroupStyle"
                app:drawable_right="@mipmap/icon_arrow"
                app:group_title="@string/security_phone"
                app:line_height="0" />

            <com.alsc.utils.view.ItemGroup
                android:id="@+id/security_email"
                style="@style/ItemGroupStyle"
                app:drawable_right="@mipmap/icon_arrow"
                app:group_title="@string/security_email"
                app:line_height="0" />

        </LinearLayout>




    </LinearLayout>
</layout>