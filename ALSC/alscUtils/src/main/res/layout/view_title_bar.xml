<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_52PX">

    <ImageView
        android:id="@+id/iv_title_left"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:paddingBottom="@dimen/DIMEN_16PX"
        android:paddingLeft="@dimen/DIMEN_10PX"
        android:paddingRight="@dimen/DIMEN_16PX"
        android:paddingTop="@dimen/DIMEN_16PX"
        android:src="@mipmap/icon_back" />

    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/DIMEN_10PX"
        android:layout_marginLeft="48dp"
        android:paddingRight="@dimen/DIMEN_16PX"
        android:paddingTop="@dimen/DIMEN_10PX"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/white"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_52PX"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/text_size_19" />


    <ImageView
        android:id="@+id/iv_title_right"
        android:layout_width="@dimen/DIMEN_54PX"
        android:layout_height="@dimen/DIMEN_42PX"
        android:layout_gravity="center_vertical|right"
        android:clickable="true"
        android:paddingBottom="@dimen/DIMEN_10PX"
        android:paddingLeft="@dimen/DIMEN_16PX"
        android:paddingRight="@dimen/DIMEN_16PX"
        android:paddingTop="@dimen/DIMEN_10PX" />

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:clickable="true"
        android:gravity="center"
        android:textSize="@dimen/text_size_15"
        android:paddingBottom="@dimen/DIMEN_10PX"
        android:paddingLeft="@dimen/DIMEN_16PX"
        android:paddingRight="@dimen/DIMEN_16PX"
        android:paddingTop="@dimen/DIMEN_10PX"
        android:textColor="@color/white" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:visibility="gone" />

</FrameLayout>