	<declare-styleable name="MyVerificationCode">
		<attr name="countDownSecond" format="integer" />
		<attr name="countDownText" format="string" />
		<attr name="buttonText" format="string" />
	</declare-styleable>

	<declare-styleable name="ItemGroup">

		<attr name="group_title" format="string"/>
		<attr name="drawable_left" format="reference"/>
		<attr name="drawable_right" format="reference"/>
		<attr name="drawable_right_des" format="reference"/>
		<attr name="left_image_width" format="reference|dimension"/>
		<attr name="line_color" format="color"/>
		<attr name="line_height" format="integer"/>
		<attr name="rl_height" format="reference|dimension"/>
		<attr name="show_right_text" format="boolean"/>
		<attr name="show_right_image" format="boolean"/>

	</declare-styleable>


	<!--标题栏-->
	<declare-styleable name="TitleBar">
		<attr name="tbTitle" format="string|reference" />
		<attr name="tbTitleRight" format="string|reference" />
		<attr name="tbTitleLeft" format="string|reference" />
		<attr name="tbTitleColor" format="color|reference" />
		<attr name="tbLeftDrawable" format="reference" />
		<attr name="tbRightDrawable" format="reference" />
		<attr name="showRightDrawable" format="boolean" />
		<attr name="showLeftDrawable" format="boolean" />
		<attr name="showTextRight" format="boolean" />
		<attr name="showTextLeft" format="boolean" />
	</declare-styleable>

</resources>